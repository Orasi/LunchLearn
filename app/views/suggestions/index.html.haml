%h1
  All Suggestions:
  -@suggestions.each do |suggestion|
    %h5
      =link_to suggestion.suggestion_title,suggestion_path(suggestion)
      %span
        =link_to "Delete", suggestion_path(suggestion), method: :delete, class: "btn btn-default btn-sm"
    %p= suggestion.suggestion_description

%h1= "No Suggestions to display" if @suggestions.count == 0
