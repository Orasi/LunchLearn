-if @events.count != 0
  %h3 Previous Lunch and Learns
  %div#accordion
    -@events.each do |event|
      %h5
        =event.event_style.element.title
        %small= "Hosted by  #{event.hosts.collect{|host| User.find(host.user_id).display_name}.join(" and ")}   -    #{ event.schedules.first.lunch_date.to_date.strftime("%B %d, %Y")}"
      %div
        = event.event_style.element.description
        %br
        = link_to "Details", send("#{event.event_style.element_type.downcase}_path", event), class: "btn btn-primary btn-lg white-text"
        - if is_admin
          %span.pull-right
            =link_to "Edit", send("edit_#{event.event_style.element_type.downcase}_path", event), class: "btn btn-default btn-sm"
            =link_to "Delete", send("#{event.event_style.element_type.downcase}_path", event), method: :delete, class: "btn btn-default btn-sm"

-if @events.count == 0
  = "There are no previous Lunch and Learns in the system"
:javascript
  $(function(){
    $("#accordion").accordion({collapsible: true, active:false,heightStyle: "content"});
  });
