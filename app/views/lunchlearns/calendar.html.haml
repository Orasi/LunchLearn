-if @lunchlearns.count != 0
  .h1
    Next Event
    -firstLL = @lunchlearns.shift
  .jumbotron
    .jumbo-header
      .jumbo-title.h1
        = firstLL.title
      .jumbo-date-hosts.h2
        .jumbo-date.small
          = firstLL.lunch_date.to_date.strftime("%B %d, %Y") + " at " + firstLL.lunch_time.strftime("%I:%M %p")
        .jumbo-spacer
        .jumbo-hosts
          .jumbo-hosted-by.small
            Hosted by
          -firstLL.hosts.collect.each do |host|
            .jumbo-hosts.small
              .jumbo-hosts-picture
                =image_tag User.find(host.user_id).photo, class: "img-circle"
              .jumbo-hosts-name
                ="#{User.find(host.user_id).display_name}"
    %p.jumbo-description
      = firstLL.description
    .jumbo-button-panel
      %div.jumbo-main-buttons.pull-left
        = link_to (firstLL.attendees.exists?(user_id: session[:current_user_id]) ? "Don't Attend" : "Attend"), attendee_path(firstLL), class: "btn btn-primary btn-lg"
        = link_to "Details", lunchlearn_path(firstLL), class: "btn btn-primary btn-lg"
     
      - if is_admin
        .jumbo-admin-buttons.pull-right     
          = link_to "Edit", edit_lunchlearn_path(firstLL), class: "btn btn-default btn-sm"
          = link_to "Delete", lunchlearn_path(firstLL), method: :delete, class: "btn btn-default btn-sm"

  %h3 Other Upcoming Events
  #accordion
    -@lunchlearns.each do |lunch|
      %h5
        =lunch.title
        %small
          -if lunch.hosts.count != 0
            = "Hosted by  #{lunch.hosts.collect{|host| User.find(host.user_id).display_name}.join(" and ")}   -    "
          %strong
            = "#{ lunch.lunch_date.to_date.strftime("%B %d, %Y") + " at " + lunch.lunch_time.strftime("%I:%M %p")}"
      %div
        = lunch.description
        %br
        = link_to (lunch.attendees.exists?(user_id: session[:current_user_id]) ? "Don't Attend" : "Attend"), attendee_path(lunch), class: "btn btn-primary btn-lg white-text"
        = link_to "Details", lunchlearn_path(lunch), class: "btn btn-primary btn-lg white-text"
        - if is_admin
          %span.pull-right
            =link_to "Edit", edit_lunchlearn_path(lunch), class: "btn btn-default btn-sm"
            =link_to "Delete", lunchlearn_path(lunch), method: :delete, class: "btn btn-default btn-sm"

-if @lunchlearns.count == 0
  = "No lunch and learns are currently scheduled"
:javascript
  $(function(){
    $("#accordion").accordion({collapsible: true, active:false,heightStyle: "content"});
  });
