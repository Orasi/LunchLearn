      %h1
        = firstLL.title
        %small= "Hosted by  #{firstLL.hosts.collect{|host| User.find(host.user_id).display_name}.join(" and ")}"
  
      %p= firstLL.description
      %div
        %div.inline
          = link_to (firstLL.attendees.exists?(user_id: session[:current_user_id]) ? "Don't Attend" : "Attend"), attendee_path(firstLL), class: "btn btn-primary btn-lg inline"
          = link_to "Details", lunchlearn_path(firstLL), class: "btn btn-primary btn-lg inline"
        - if is_admin
          %div.inline.right      
            %span=link_to "Edit", edit_lunchlearn_path(firstLL), class: "btn btn-default btn-sm inline"
            %span=link_to "Delete", lunchlearn_path(firstLL), method: :delete, class: "btn btn-default btn-sm inline"
  %h3 Other Upcoming Events
  %div#accordion
    -@lunchlearns.each do |lunch|
      %h5
        =lunch.title
        %small= "Hosted by  #{lunch.hosts.collect{|host| User.find(host.user_id).display_name}.join(" and ")}"
      %div
        = lunch.description
        %br
        =link_to (lunch.attendees.exists?(user_id: session[:current_user_id]) ? "Don't Attend" : "Attend"), attendee_path(lunch), class: "btn btn-primary btn-lg"
        = link_to "Details", lunchlearn_path(lunch), class: "btn btn-primary btn-lg"
        - if is_admin
          %span.right
            =link_to "Edit", edit_lunchlearn_path(lunch), class: "btn btn-default btn-sm"
            =link_to "Delete", lunchlearn_path(lunch), method: :delete, class: "btn btn-default btn-sm"

-if @lunchlearns.count == 0
  = "No lunch and learns are currently scheduled"
:javascript
  $(function(){
