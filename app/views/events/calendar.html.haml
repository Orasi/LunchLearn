-if @events.count != 0
  .h1
    Next Event
  -firstLL = @events.shift
  = render partial: 'eventJumbo', locals: {event: firstLL}      
  %h3 Other Upcoming Events
  #accordion
    -@events.each do |event|
      %h5
        =event.event_style.element.title
        %small
          -if event.hosts.count != 0
            = "Hosted by  #{event.hosts.collect{|host| host.user.display_name}.join(" and ")}   -    "
          %strong
            = "#{ event.schedules.first.lunch_date.to_date.strftime("%B %d, %Y") + " at " + event.schedules.first.lunch_time.strftime("%I:%M %p") + (event.schedules.first.end_time.blank? ? "" : " to " +event.schedules.first.end_time.strftime("%I:%M %p"))}"
      %div
        - if event.is_attending_event(current_user)
          .well.well-sm.well-success
            %strong You are attending this event
            = "  -  No longer attending?"
            = link_to  "Don't Attend" , attendee_path(event)
        = event.event_style.element.description
        %br
        = link_to (event.is_attending_event(current_user) ? "Don't Attend" : "Attend"), attendee_path(event), class: "btn btn-primary btn-lg white-text" unless event.is_attending_event(current_user)
        = link_to "Details", event_path(event), class: "btn btn-primary btn-lg white-text"
        - if is_admin
          %span.pull-right
            =link_to "Edit", send("edit_#{event.event_style.element_type.downcase}_path", event), class: "btn btn-default btn-sm"
            =link_to "Delete", event_path(event), method: :delete, class: "btn btn-default btn-sm"

-if @events.count == 0
  = "No lunch and learns are currently scheduled"
:javascript
  $(function(){
    $("#accordion").accordion({collapsible: true, active:false,heightStyle: "content"});
  });
