.fields
  =f.label "Day"
  .event-schedule-section.form-inline.indented
    .thefields
      .form_group
        =f.label :event_date, class: "control-label"
        = f.text_field :event_date, value: (f.object.start.to_date.strftime("%m/%d/%Y") unless f.object.start.blank?), class: "daydate", required: true
      .form_group
        %br
        =f.label :start, "Event start time:", class: "control-label"
        =f.text_field :start, value: (f.object.start.strftime("%I:%M%p") unless f.object.start.blank?), class: "time", id: "timepicker", required: true
      .form_group
        %br
        =f.label :end, "Event end time:", class: "control-label"
        =f.text_field :end, value: (f.object.end.strftime("%I:%M%p") unless f.object.end.blank?), class: "time", id: "timepickerend", required: true
        = hidden_field_tag 'time_zone_offset'
      = link_to_remove_fields "remove", f
:javascript
  $('.thefields').on('click', '.time', function(){
    $(this).timepicker({ 
      useSelect: true,
      'scrollDefault': 'now' 
    });
  });
  $('.thefields').on('click', '.daydate', function(){
    $(this).datepicker()
    $(this).datepicker('show');
  });


