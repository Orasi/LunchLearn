  .event-schedule-section.form-inline
    .form_group
      =f.label :event_date, class: "control-label"
      = f.text_field :event_date, value: @schedule.start, class: "form-control", id: "datepicker", required: true
    .form_group
      %br
      =f.label :start, "Event start time:", class: "control-label"
      =f.text_field :start, value: (:start), class: "time", id: "timepicker", required: true
    .form_group
      %br
      =f.label :end, "Event end time:", class: "control-label"
      =f.text_field :end, value: (:end), id: "timepickerend", required: true
      = hidden_field_tag 'time_zone_offset'
      = link_to_remove_fields "remove", f
